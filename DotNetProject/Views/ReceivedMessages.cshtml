@model List<DotNetProject.Models.Message>

@{
    ViewData["Title"] = "Received Messages";
}

<h2 class="text-center my-4">Received Messages</h2>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var message in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">From: @message.Sender.Name</h5>
                            <p class="card-text">
                                @message.Content
                            </p>
                            <p class="card-text text-muted">
                                <small>Received At: @message.SentAt.ToString("g")</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">You have not received any messages yet.</p>
    }
</div>
