@model List<DotNetProject.Models.User>

@{
    ViewData["Title"] = "Followed Users";
}

<h2 class="text-center my-4">Your Followed Users</h2>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="list-group">
            @foreach (var user in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@user.Name</span>

                    <form method="post" action="@Url.Action("Unfollow", "Follow")">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Unfollow</button>
                    </form>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container">
        <p class="text-center">You are not following any users yet.</p>
    </div>
}
