@model List<DotNetProject.Models.Post>

@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="text-center  mt-4">Welcome, @ViewBag.UserName</h2>

@if (Model != null && Model.Any())
{
    <div class="container-fluid gedf-wrapper d-flex justify-content-center vh-100 mt-5">
        <div class="row w-100">
            @foreach (var post in Model)
            {
                <div class="col-md-8 mx-auto ">
                    <div class="card gedf-card">
                        <div class="card-body">
                            <div class="text-muted h7 mb-2">
                                <i class="fa fa-clock-o"></i>

                                @post.CreatedAt.ToString("g") 
                            </div>

                            <h3 class="card-title">@post.User.Name</h3>

                            <img src="@post.ImagePath" class="card-img-top post-image" style="max-height: 200px; object-fit: cover;" alt="Post Image" />
                                
                          
                            <p class="card-text">
                                <h5 class="card-title">@post.Caption</h5>
                            </p>
                        </div>
                     
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container">
        <p class="text-center">No posts from followed users.</p>
    </div>
}
