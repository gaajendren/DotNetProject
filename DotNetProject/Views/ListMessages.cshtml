@model List<DotNetProject.Models.Message>

@{
    ViewData["Title"] = "List of Sent Messages";
}

<h2 class="text-center my-4">Sent Messages</h2>

<div class="container">

    <a class="btn btn-primary text-white" href="@Url.Action("SendMessage", "Message")" style="margin: 5px; display: inline-block;">
        Send Message
    </a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Friend Name</th>
                    <th>Message Content</th>
                    <th>Sent At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.Receiver.Name</td>
                        <td>@message.Content</td>
                        <td>@message.SentAt.ToString("g")</td>
                        <td>
                            <a href="@Url.Action("EditMessage", "Message", new { id = message.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteMessage", "Message", new { id = message.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">You have not sent any messages.</p>
    }
</div>
