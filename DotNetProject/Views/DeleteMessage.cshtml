@model DotNetProject.Models.Message

@{
    ViewData["Title"] = "Delete Message";
}

<h2 class="text-center my-4">Delete Message</h2>

<div class="container">
    <p>Are you sure you want to delete this message?</p>
    <p><strong>Message Content:</strong> @Model.Content</p>
    <form method="post" action="@Url.Action("DeleteMessageConfirmed", "Message", new { id = Model.Id })">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("ListMessages", "Message")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
